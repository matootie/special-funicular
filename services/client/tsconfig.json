{
  "extends": "@app/tsconfig/vite.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "paths": {
      "#app": ["src/app"],
      "#styles": ["src/styles.css"],
      "#components/*": ["src/components/*"],
      "#pages/*": ["src/pages/*"],
      "#utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
